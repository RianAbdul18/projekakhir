<%- include('partials/header') %>
<% const path = '/profil-fasilitas' %>

<section class="section">
  <div class="container">
    <h1 class="section-title">Fasilitas Sekolah</h1>
    <div class="grid" style="display:grid; grid-template-columns:repeat(auto-fill, minmax(300px,1fr)); gap:1.5rem;">
      <% fasilitas.forEach(f => { %>
        <div class="card">
          <img src="<%= f.foto || '/img/placeholder.jpg' %>" alt="<%= f.nama %>" style="width:100%; height:180px; object-fit:cover;" />
          <div class="p-3">
            <h4><%= f.nama %></h4>
            <p><%= f.deskripsi %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
