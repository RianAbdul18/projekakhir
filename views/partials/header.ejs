<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>MTs Darul Falah</title>
  <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Website Resmi MTs Darul Falah - Sekolah Berprestasi Berakhlak Mulia' %>">
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    /* CSS Tambahan Khusus Dropdown Vertical (turun ke bawah) */
    .dropdown-menu {
      position: absolute;
      top: 100%;
      left: 0;
      background: #0d6efd;
      min-width: 220px;
      box-shadow: 0 8px 16px rgba(0,0,0,0.2);
      border-radius: 0 0 12px 12px;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      z-index: 999;
    }
    .dropdown:hover > .dropdown-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
    .dropdown-menu a {
      display: block;
      padding: 12px 20px;
      color: white;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    .dropdown-menu a:hover {
      background: #0b5ed7;
      padding-left: 25px !important;
    }
    /* Mobile tetap rapi */
    @media (max-width: 992px) {
      .dropdown-menu {
        position: static;
        box-shadow: none;
        background: rgba(255,255,255,0.1);
        border-radius: 8px;
        margin-top: 5px;
      }
    }
  </style>
</head>
<body>
  <% const currentPath = (typeof path !== 'undefined' ? path : '/') %>

  <header class="main-header">
    <div class="container">
      <a href="/" class="logo">
        <img src="/img/logo.png" alt="Logo MTs Darul Falah" />
        <span>MTs Darul Falah</span>
      </a>
      <nav class="main-nav">
        <ul>
          <li><a href="/" class="<%= currentPath === '/' ? 'active' : '' %>">Beranda</a></li>

          <!-- SUBMENU PROFIL (turun ke bawah) -->
          <li class="dropdown">
            <a href="javascript:void(0)" class="dropdown-toggle <%= currentPath.includes('profil') ? 'active' : '' %>">Profil</a>
            <ul class="dropdown-menu">
              <li><a href="/profil-sekolah">Profil Sekolah</a></li>
              <li><a href="/profil-visi-misi">Visi Misi</a></li>
              <li><a href="/profil-sejarah">Sejarah</a></li>
              <li><a href="/profil-staff">Staff & Guru</a></li>
              <li><a href="/profil-fasilitas">Fasilitas</a></li>
            </ul>
          </li>

          <li><a href="/berita" class="<%= currentPath.startsWith('/berita') ? 'active' : '' %>">Berita</a></li>
          <li><a href="/galeri" class="<%= currentPath === '/galeri' ? 'active' : '' %>">Galeri</a></li>

          <!-- SUBMENU EKSKUL (baru ditambah, turun ke bawah) -->
          <li class="dropdown">
            <a href="javascript:void(0)" class="dropdown-toggle <%= currentPath === '/ekskul-list' ? 'active' : '' %>">Ekskul</a>
            <ul class="dropdown-menu">
              <li><a href="/ekskul/perisai-diri">Perisai Diri</a></li>
              <li><a href="/ekskul/voli">Voli</a></li>
              <li><a href="/ekskul/paskibra">Paskibra</a></li>
              <li><a href="/ekskul/marching-band">Marching Band</a></li>
              <li><a href="/ekskul/marawis">Marawis</a></li>
              <li><a href="/ekskul/rebana">Rebana</a></li>
              <li><a href="/ekskul/pramuka">Pramuka</a></li>
            </ul>
          </li>

          <li><a href="/kalender" class="<%= currentPath === '/kalender' ? 'active' : '' %>">Kalender</a></li>
          <li><a href="/ppdb" class="<%= currentPath === '/ppdb' ? 'active' : '' %>">PPDB</a></li>
          <li><a href="/kontak" class="<%= currentPath === '/kontak' ? 'active' : '' %>">Kontak</a></li>
        </ul>
      </nav>
    </div>
  </header>