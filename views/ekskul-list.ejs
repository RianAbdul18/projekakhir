<%- include('partials/header') %>
<% const path = '/ekskul-list' %>

<section class="section">
  <div class="container">
    <h1 class="section-title">Ekstrakurikuler</h1>
    <div class="grid" style="display:grid; grid-template-columns:repeat(auto-fill, minmax(300px,1fr)); gap:1.5rem;">
      <% ekskul.forEach(e => { %>
        <div class="card">
          <img src="<%= e.foto || '/img/placeholder.jpg' %>" alt="<%= e.nama %>" style="width:100%; height:180px; object-fit:cover;" />
          <div class="p-3">
            <h4><%= e.nama %></h4>
            <p><%= e.deskripsi || 'Tidak ada deskripsi' %></p>
            <p class="text-muted small">Pembina: <%= e.pembina || '—' %> | Jadwal: <%= e.jadwal || '—' %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
