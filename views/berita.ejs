<%- include('partials/header') %>
<% const path = '/berita' %>

<section class="section">
  <div class="container">
    <h1 class="section-title">Berita & Pengumuman</h1>
    <% berita.forEach(b => { %>
      <div class="card mb-4">
        <div class="grid" style="display:grid; grid-template-columns:200px 1fr; gap:1rem;">
          <% if (b.gambar) { %>
            <img src="<%= b.gambar %>" alt="<%= b.judul %>" style="width:100%; height:150px; object-fit:cover;" />
          <% } else { %>
            <div style="width:100%; height:150px; background:#eee; display:flex; align-items:center; justify-content:center; color:#999;">
              <i class="fas fa-image fa-3x"></i>
            </div>
          <% } %>
          <div class="p-3">
            <h3><%= b.judul %></h3>
            <p class="text-muted small"><%= new Date(b.tanggal).toLocaleDateString('id-ID') %> â€¢ <%= b.views %> dilihat</p>
            <p><%= b.isi.length > 200 ? b.isi.substring(0,200) + '...' : b.isi %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<%- include('partials/footer') %>
